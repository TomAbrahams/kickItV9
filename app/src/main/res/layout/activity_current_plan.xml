<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kickitvx.thomas.kickitv7.CurrentPlan">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <EditText
            android:id="@+id/etPlanCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_toEndOf="@+id/space"
            android:ems="10"
            android:hint="Code"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvEventThree"
            android:text="Code for the Event" />

        <TextView
            android:id="@+id/tvLblEventThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEventTwo"
            android:layout_toEndOf="@+id/space"
            android:background="@android:color/holo_blue_bright"
            android:text="Event 3"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvlblEventOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/space"
            android:background="@android:color/holo_red_dark"
            android:text="Event 1"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvLblEventTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEventOne"
            android:layout_toEndOf="@+id/space"
            android:background="@android:color/holo_green_dark"
            android:text="Event 2"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvEventTwo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/btnJoinPlan"
            android:layout_below="@+id/tvLblEventTwo"
            android:layout_toStartOf="@+id/btnChgEvent1"
            android:text="Click me to start!" />

        <TextView
            android:id="@+id/tvEventOne"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/tvEventTwo"
            android:layout_below="@+id/tvlblEventOne"
            android:layout_toStartOf="@+id/btnChgEvent1"
            android:text="Click me to start!" />

        <TextView
            android:id="@+id/tvEventThree"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/tvLblEventThree"
            android:layout_toStartOf="@+id/btnChgEvent2"
            android:text="Click me to start!" />

        <Space
            android:id="@+id/space"
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnJoinPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnSavePlan"
            android:layout_alignBottom="@+id/btnSavePlan"
            android:layout_toEndOf="@+id/btnSavePlan"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="Back"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnSavePlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnReady"
            android:layout_alignBottom="@+id/btnReady"
            android:layout_toEndOf="@+id/btnReady"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            android:text="Save Plan"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnReady"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_marginBottom="56dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:text="Create Plan"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnChgEvent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvLblEventTwo"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvlblEventOne"
            android:layout_toEndOf="@+id/btnJoinPlan"
            android:background="@android:color/holo_red_light"
            android:text="Change\n Event 1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnChgEvent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvLblEventThree"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvLblEventTwo"
            android:layout_toEndOf="@+id/tvEventTwo"
            android:background="@android:color/holo_green_light"
            android:text="Change\n Event 2"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnChgEvent3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView7"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvLblEventThree"
            android:layout_toEndOf="@+id/tvEventThree"

            android:background="@android:color/holo_blue_light"
            android:text="Change\n Event 3"
            android:textAllCaps="false" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
