<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main__menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.kickitvx.thomas.kickitv7.Main_Menu">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Your choice is my command\n." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:weightSum="1"
            android:orientation="horizontal">

            <com.kickitvx.thomas.kickitv7.MyTextViewFuture
                android:id="@+id/btnJoinEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/holo_red_dark"
                android:gravity="center_vertical|right"
                android:text="Join Event"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="40dp" />

            <com.kickitvx.thomas.kickitv7.MyTextViewFuture
                android:id="@+id/btnCreateEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/holo_green_dark"
                android:gravity="center_vertical|right"
                android:text="Create Event"

                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:orientation="horizontal">

            <com.kickitvx.thomas.kickitv7.MyTextViewFuture
                android:id="@+id/btnLoadEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center_vertical|right"
                android:text="Load Event"
                android:textAlignment="center"

                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="10dp" />

            <com.kickitvx.thomas.kickitv7.MyTextViewFuture
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical|right"

                android:text="Logout"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </LinearLayout>
        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.kickitvx.thomas.kickitv7.MyTextViewFuture
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/MediumPurple"
            android:gravity="center_vertical|right"
            android:onClick="goToProfile"
            android:text="Edit Profile"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp" />

    </LinearLayout>

</RelativeLayout>
